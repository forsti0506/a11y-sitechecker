{
    "name": "a11y-sitechecker",
    "version": "1.12.0",
    "description": "",
    "repository": {
        "type": "git",
        "url": "https://github.com/forsti0506/a11y-sitechecker.git"
    },
    "main": "./lib/a11y-sitechecker.js",
    "types": "./lib/a11y-sitechecker.d.ts",
    "dependencies": {
        "@axe-core/puppeteer": "^4.1.1",
        "chalk": "^4.1.0",
        "commander": "^7.1.0",
        "jsdom": "^16.4.0",
        "prettyjson": "^1.2.1",
        "puppeteer": "^5.5.0",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@semantic-release/changelog": "^5.0.1",
        "@semantic-release/git": "^9.0.0",
        "@semantic-release/github": "^7.2.0",
        "@semantic-release/npm": "^7.0.9",
        "@semantic-release/release-notes-generator": "^9.0.1",
        "@types/jasmine": "^3.6.4",
        "@types/uuid": "^8.3.0",
        "@types/jsdom": "^16.2.5",
        "@types/node": "^14.14.20",
        "@types/prettyjson": "^0.0.29",
        "@types/puppeteer": "^5.4.2",
        "@typescript-eslint/eslint-plugin": "^4.12.0",
        "@typescript-eslint/parser": "^4.12.0",
        "copyfiles": "^2.4.1",
        "eslint": "^7.20.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-promise": "^4.2.1",
        "husky": "^4.3.7",
        "jasmine": "^3.6.4",
        "jasmine-spec-reporter": "^6.0.0",
        "lint-staged": "^10.5.3",
        "prettier": "^2.2.1",
        "semantic-release": "^17.3.1",
        "typescript": "^4.1.3",
        "ts-node": "^9.1.1"
    },
    "scripts": {
        "build": "tsc && copyfiles README.md dist",
        "build:prod": "tsc --project tsconfig.prod.json && copyfiles README.md dist",
        "lint": "eslint . --ext .ts",
        "semantic-release": "semantic-release",
        "test": "ts-node node_modules/jasmine/bin/jasmine --config=jasmine.json"
    },
    "bin": {
        "a11y-sitechecker": "./bin/a11y-sitechecker.js"
    },
    "keywords": [
        "accessibility",
        "a11y",
        "testing",
        "automated testing",
        "accessibility testing",
        "universal design",
        "Design4all",
        "automation",
        "test",
        "accessible"
    ],
    "author": "Martin Forstner",
    "license": "GPL-3.0-or-later",
    "files": [
        "lib",
        "bin"
    ],
    "release": {
        "branches": [
            "main",
            "next"
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/changelog",
            [
                "@semantic-release/npm",
                {
                    "pkgRoot": "dist",
                    "tarballDir": "release"
                }
            ],
            [
                "@semantic-release/git",
                {
                    "assets": [
                        "CHANGELOG.md"
                    ]
                }
            ],
            [
                "@semantic-release/github",
                {
                    "assets": "release/*.tgz"
                }
            ]
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "**/*.{js,ts,tsx}": [
            "eslint --cache --fix"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}
