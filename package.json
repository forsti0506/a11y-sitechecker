{
    "name": "a11y-sitechecker",
    "version": "4.2.0",
    "description": "",
    "repository": {
        "type": "git",
        "url": "https://github.com/forsti0506/a11y-sitechecker.git"
    },
    "main": "./lib/a11y-sitechecker.js",
    "types": "./lib/a11y-sitechecker.d.ts",
    "dependencies": {
        "@axe-core/puppeteer": "^4.3.2",
        "chalk": "^4.0.0",
        "commander": "^8.3.0",
        "jsdom": "^19.0.0",
        "puppeteer": "^13.0.1",
        "rxjs": "^7.5.1",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^16.0.1",
        "@commitlint/config-conventional": "^16.0.0",
        "@semantic-release/changelog": "^6.0.1",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^8.0.2",
        "@semantic-release/npm": "^8.0.3",
        "@semantic-release/release-notes-generator": "^10.0.3",
        "@types/jest": "^27.0.3",
        "@types/jsdom": "^16.2.14",
        "@types/node": "^17.0.5",
        "@types/prettyjson": "^0.0.30",
        "@types/puppeteer": "^5.4.4",
        "@types/uuid": "^8.3.3",
        "@typescript-eslint/eslint-plugin": "^5.8.1",
        "@typescript-eslint/parser": "^5.8.1",
        "copyfiles": "^2.4.1",
        "eslint": "^8.5.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-promise": "^6.0.0",
        "husky": "^7.0.4",
        "istanbul-badges-readme": "^1.8.1",
        "jest": "^27.4.5",
        "jest-puppeteer": "^6.0.3",
        "prettier": "^2.5.1",
        "semantic-release": "^18.0.1",
        "ts-jest": "^27.1.2",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.4"
    },
    "scripts": {
        "build": "tsc && copyfiles README.md dist",
        "build:prod": "npm run lint && tsc --project tsconfig.prod.json && copyfiles README.md dist",
        "lint": "tsc --noEmit && eslint . --ext js,ts --quiet --fix",
        "semantic-release": "semantic-release",
        "test": "jest --detectOpenHandles --forceExit",
        "test:withIts": "jest --detectOpenHandles --forceExit --config=jest-it.config.js",
        "test:coverage": "jest --coverage --detectOpenHandles",
        "test:local": "jest --watch",
        "prepare_husky": "husky install",
        "badge-script": "istanbul-badges-readme && git add .",
        "update-major-deps": "npx npm-check-updates -u"
    },
    "bin": {
        "a11y-sitechecker": "./bin/a11y-sitechecker.js"
    },
    "keywords": [
        "accessibility",
        "a11y",
        "testing",
        "automated testing",
        "accessibility testing",
        "universal design",
        "Design4all",
        "automation",
        "test",
        "accessible"
    ],
    "author": "Martin Forstner",
    "license": "GPL-3.0-or-later",
    "files": [
        "lib",
        "bin"
    ],
    "release": {
        "branches": [
            "main",
            "next"
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/changelog",
            [
                "@semantic-release/npm",
                {
                    "pkgRoot": "dist",
                    "tarballDir": "release"
                }
            ],
            [
                "@semantic-release/git",
                {
                    "assets": [
                        "CHANGELOG.md"
                    ]
                }
            ],
            [
                "@semantic-release/github",
                {
                    "assets": "release/*.tgz"
                }
            ]
        ]
    }
}
