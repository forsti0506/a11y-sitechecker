{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": false,
    "removeComments": true,
    "declaration": true,
    "target": "es2021",
    "strict": true,
    "lib": [
      "es2021",
      "dom"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "./lib/**/*",
    "./bin/**/*",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "lib/utils/test-helper-functions.ts"
  ]
}
